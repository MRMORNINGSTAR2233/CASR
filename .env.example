# CASR Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# LLM Provider Configuration
# =============================================================================

# OpenAI (for embeddings and LLM)
OPENAI_API_KEY=sk-your-openai-api-key

# Anthropic (for query analysis and contextualization)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key

# Cohere (for reranking)
COHERE_API_KEY=your-cohere-api-key

# Google Gemini (for LLM and embeddings)
GEMINI_API_KEY=your-gemini-api-key

# Groq (for fast LLM inference)
GROQ_API_KEY=your-groq-api-key

# =============================================================================
# Vector Store Configuration
# =============================================================================

# Vector store type: "chroma", "pinecone", "weaviate"
VECTOR_STORE_TYPE=chroma

# ChromaDB (local development)
CHROMA_PERSIST_DIR=./data/chroma

# Pinecone
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_ENVIRONMENT=your-pinecone-environment
PINECONE_INDEX_NAME=casr-index

# Weaviate
WEAVIATE_URL=http://localhost:8080
WEAVIATE_API_KEY=your-weaviate-api-key

# =============================================================================
# Embedding Configuration
# =============================================================================

# Embedding provider: "openai", "sentence-transformers", "cohere"
EMBEDDING_PROVIDER=openai

# OpenAI embedding model
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# Sentence Transformers model
SENTENCE_TRANSFORMER_MODEL=all-MiniLM-L6-v2

# =============================================================================
# Security Configuration
# =============================================================================

# JWT Settings
JWT_SECRET_KEY=your-super-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# API Key for service-to-service auth
API_KEY=your-api-key

# =============================================================================
# Application Configuration
# =============================================================================

# Environment: development, staging, production
ENVIRONMENT=development

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=true

# Logging level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# =============================================================================
# Retrieval Configuration
# =============================================================================

# Number of chunks to retrieve initially
RETRIEVAL_TOP_K=20

# Number of chunks after reranking
RERANK_TOP_K=5

# Chunk size for document processing
CHUNK_SIZE=512
CHUNK_OVERLAP=50

# Enable/disable reranking
ENABLE_RERANKING=true

# Enable/disable contextual embeddings
ENABLE_CONTEXTUAL_EMBEDDINGS=true
